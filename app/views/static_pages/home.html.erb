<% provide(:title, 'Home') %>
<% if logged_in? %>
  <div class="row">
    <div class="col-3">
      <%# User profile -> user_info %>
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <%# Micropost Form %>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </div>
    <%# Microposts  %>
    <div class="col-9">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="main bg-secondary mb-5">
    <div class="text-center py-4">
      <h1 class="display-4">Awesome Blog!</h1>
      <p class="lead">Welcome to my awesome blog!</p>
      <div id="carouselExampleIndicators" class="carousel slide p-5" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/assets/form.jpg" alt="">
          </div>
          <div class="carousel-item">
            <img src="/assets/pic.jpeg" alt="">
          </div>
          <div class="carousel-item">
            <img src="/assets/view.jpg" alt="">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
<% end %>
